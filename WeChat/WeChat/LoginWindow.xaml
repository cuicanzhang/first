<Window x:Class="WeChat.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeChat"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="400" AllowsTransparency="True" WindowStyle="None"  WindowStartupLocation="CenterScreen">
    <Grid Name="loginInfo" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Name="codeImage" Width="300" Height="300" Stretch="Fill" Grid.Row="1"/>
            <Label Name="loginLable" Grid.Row="2" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="Gray"/>

    </Grid>
</Window>
